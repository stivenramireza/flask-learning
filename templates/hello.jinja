{% extends "base.jinja" %}
{% import "macros.jinja" as macros %}
{% import "bootstrap/wtf.html" as wtf %}

{% block title %}
    {{ super() }}
    Welcome
{% endblock %}}

{% block content %}
    {% if user_ip %}
        <h1>Hello world Platzi, your IP is {{ user_ip }}</h1>
    {% else %}
        <a href="{{ url_for('index') }}">Go to home</a>
    {% endif %}

    <div class="container">
        <form action="{{ url_for('hello') }}" method="POST">
            {{ wtf.quick_form(login_form) }}
        </form>
    </div>

    <ul>
        {% for todo in todos %}
            {{ macros.render_todo(todo) }}
        {% endfor %}
    </ul>
{% endblock %}
